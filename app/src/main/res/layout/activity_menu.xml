<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.patricklutz.ba.client.MenuActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWlan"
        android:onClick="connectViaWlan"
        android:text="Connect via WLAN"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBluetooth"
        android:onClick="connectViaBluetooth"
        android:text="Connect via Bluetooth"
        android:layout_below="@id/buttonWlan"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steuerung1"
            android:id="@+id/radioSteuerung1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:layout_gravity="right" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steuerung2"
            android:id="@+id/radioSteuerung2"
            android:layout_below="@id/radioSteuerung1"
            android:layout_alignParentEnd="true"
            android:checked="false"
            android:layout_gravity="right" />
    </RadioGroup>

</RelativeLayout>
